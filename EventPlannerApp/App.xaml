<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EventPlannerApp"
             xmlns:converters="clr-namespace:EventPlannerApp.Presentation.Converters"
             x:Class="EventPlannerApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary>
                <Color x:Key="PageBackgroundColor">#f8f8f8</Color>
                <Color x:Key="MyTeal">#00796B</Color>
                <Color x:Key="SaveButtonColor">#4CAF50</Color>
            </ResourceDictionary>
            <ResourceDictionary>
                <converters:UserIdsToNamesConverter x:Key="UserIdsToNamesConverter" />
                <converters:RatingToStarsConverter x:Key="RatingToStarsConverter" />
                <converters:AddHoursConverter x:Key="AddHoursConverter" />
            </ResourceDictionary>
        </ResourceDictionary>
    </Application.Resources>
</Application>
